<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".video.reproductor_video_seleccion">

    <include layout="@layout/imagen_fondo"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <VideoView
            android:id="@+id/videoViewSeleccion"
            style="@style/videoView_portrait" />

            <Button
                android:id="@+id/buttonSeleccionarTexto"
                style="@style/botones_video"
                android:text="@string/video_seleeccion"/>

        <include layout="@layout/datos_autor"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>